{% extends "AdminBundle::Layout/adminlayout.html.twig" %}
{% block title %} Features List {% endblock %}
{% block css %}
	<link href="{{asset('bundles/design/')}}css/bootstrap-toggle.min.css" rel="stylesheet" type="text/css" />
{% endblock %}
{% block content %}
	  
	<section class="content-header" style="padding: 26px 16px 0px 0px;">
		  <small></small>

		<ol class="breadcrumb">
		  <li><a href="{{path('admin_dashboard_index',{'domain':app.session.get('domain')})}}"><i class="fa fa-dashboard"></i>Dashboard</a></li>
		  <li class="active">Features List</li>
		</ol>
	  </section>
	  <section class="content">
		<div class ="row">
			<div class="col-md-12">
			{% for flashMessage in app.session.flashbag.get('success_msg') %}
			  <div class="alert alert-success alert-dismissable">
				  <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
				  <h4><i class="icon fa fa-check"></i> Alert!</h4>{{ flashMessage }}
			  </div>
			  {% endfor %}
			  {% for flashMessage in app.session.flashbag.get('error_msg') %}
			  <div class="alert alert-danger alert-dismissable">
				  <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
				  <h4><i class="icon fa fa-check"></i> Alert!</h4>{{ flashMessage }}
			  </div>
			{% endfor %}
			</div>  
		</div>	
		<div class="row">
			<div class="col-xs-12">
                <div class="box box-solid">
                    <div class="box-header with-border">
                      <h3 class="box-title">Features List</h3>
                      <div class="pull-right">
                        <a href="{{path('admin_features_addfeature',{'domain':app.session.get('domain')})}}" class="btn btn-primary btn-flat"><i class="fa fa-plus"></i>&nbsp;&nbsp;ADD</a>
                      </div>
                    </div>
                    <div class="box-body">
                        <div class="container-fluid table-responsive">
							<table id="example1" class="table table-bordered table-striped text-center">
								<thead>
									<th hidden>Mian Feature ID</th>
									<th>Name</th>
                                    <th>Description</th>
									<th>Status</th>
                                    <th>Action</th>
								</thead>
								<tbody>
									{% if all_features is defined and all_features is not empty %}
										  {%for features in all_features %}
												<tr>
													  <td hidden>{{features.main_features_master_id}}</td>
													  <td>{{features.title}}</td>
													  <td>{{features.description|striptags|convert_encoding('UTF-8', 'HTML-ENTITIES')}}</td>
													  <td>
															<input type="checkbox" data-on="Active" data-off="Inactive" data-toggle="toggle" data-onstyle="success" {% if features.status == 'active' %}checked="checked"{% endif %} data-size="mini" onchange="changestatus({{features.main_features_master_id}},$(this).is(':checked'));"/>
													  </td>
													  <td>
															<a onclick="return confirm('Are you sure you want to Edit Feature Detail?')" class="btn btn-warning btn-xs" href="{{path('admin_features_addfeature',{'domain':app.session.get('domain')})}}/{{features.main_features_master_id}}" data-toggle="tooltip" data-original-title="Edit"><span class="fa fa-edit"></span></a>
															<a onclick="return confirm('Are you sure you want to delete Feature?')" class="btn btn-danger btn-xs" href="{{path('admin_features_deletefeature',{'domain':app.session.get('domain')})}}/{{features.main_features_master_id}}" data-toggle="tooltip" data-original-title="Delete"><span class="fa fa-remove"></span></a>
													  </td>
												</tr>
										  {% endfor %}
									{% endif %}
								</tbody>
								<tfoot>
									<th hidden>Mian Feature ID</th>
									<th>Name</th>
                                    <th>Description</th>
									<th>Status</th>
                                    <th>Action</th>
								</tfoot>
							</table>
						</div>

                    </div>
                  </div>
            </div>
		</div>
	  </section>
{% endblock %}

{% block js %}
	  
<script src="{{asset('bundles/design/')}}js/bootstrap-toggle.min.js" type="text/javascript"></script>   
<script>
	function changestatus(id,status) {
		$.post("{{path('admin_features_featurestatus',{'domain':app.session.get('domain')})}}",{id:id,status:status});
	}
$(document).ready(function() {
    $('#example1').DataTable();
} );
</script>
{% endblock %}