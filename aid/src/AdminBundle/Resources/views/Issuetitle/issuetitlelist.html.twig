{% extends "AdminBundle::Layout/adminlayout.html.twig" %}
{% block title %} Issue Type Title / Contact Type Title List{% endblock %}
{% block css %}
	 <link href="{{asset('bundles/design/')}}css/select2.min.css" rel="stylesheet" type="text/css" />
	 <link href="{{asset('bundles/design/')}}css/dataTables.bootstrap.css" rel="stylesheet" type="text/css" />
	 <link href="{{asset('bundles/design/')}}css/bootstrap-toggle.min.css" rel="stylesheet" type="text/css" />
{% endblock %}
{% block content %}
<!----------- PAGE HEADER : START ----------------------------------------------------------->
	<section class="content-header">
	<!-------- PAGE TITLE --------------->
		<h1>
		 
		  <small></small>
		</h1>
	<!------- BREADCUMB --------------------->
		<ol class="breadcrumb">
		  <li><a href="{{path('admin_dashboard_index')}}"><i class="fa fa-dashboard"></i> Dashboard</a></li>
		  <li class="active">Issue Type Title /  Contact Type Title</li>
		</ol>
	</section>
<!----------- PAGE HEADER : END ----------------------------------------------------------->
<!----------- Main content : START ----------------------------------------------------------->
	<section class="content">
		{% for flashMessage in app.session.flashbag.get('success_msg') %}
		<div class="alert alert-success alert-dismissable">
			<button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
			<h4><i class="icon fa fa-check"></i> Alert!</h4>{{ flashMessage }}
		</div>
        {% endfor %}
        {% for flashMessage in app.session.flashbag.get('error_msg') %}
		<div class="alert alert-danger alert-dismissable">
			<button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
			<h4><i class="icon fa fa-check"></i> Alert!</h4>{{ flashMessage }}
		</div>
		{% endfor %}
		<div class="row">
            <div class="col-xs-12">
				<div class="box box-primary">
                <div class="box-header with-border">
				<h3 class="box-title">Issue Type Title /  Contact Type Title List</h3>
				<div class="box-tools pull-right">
				  <a href="{{path('admin_issuetitle_addissuetitle')}}" class="btn btn-primary btn-flat" title="Add"><i class="fa fa-plus"><b>&nbsp;&nbsp;Add Issue Type Title / Contact Type Title</b></i></a>
				
				</div>
                </div><!-- /.box-header -->
                
				<div class="box-body">
                  <table id="example1" class="table table-bordered table-striped text-center">
                    <thead>
                      <tr>
                        <th>No.</th>
                        {% if languages is defined and languages is not empty %}
                          {% for lang in languages %}
                        	<th>{{lang.language_name}}</th>
                          {% endfor %}
                        {% endif %}
						<th>Issue Type Title /  Contact Type Title For</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody>
						
                      {% if issue_titlelist is defined and issue_titlelist is not empty %}
                        {% for issue_title in issue_titlelist %}
                          <tr>
                            <td>{{loop.index}}</td>
							 {% if languages is defined and languages is not empty %}
                              {% for lang in languages %}
                                <td>
								  {% if issue_title.data is defined and issue_title.data is not empty %}
									{% for ct in issue_title.data %}
									  {% if ct.language_id == lang.language_master_id %}
										{{ct.issue_title_name}}
									  {% endif %}
									{% endfor %}
								  {% endif %}
								</td>
                              {% endfor %}                              
                               {% endif %}
                           
						    <td>{{issue_title.data[0].issue_type}}</td>
                            <td>
							  {% if issue_title.data is defined and issue_title.data is not empty %}
                                <a onclick="return confirm('Are you sure you want to Edit?')"
                                   href="{{path('admin_issuetitle_addissuetitle')}}/{{issue_title.data[0].main_issue_title_master_id}}"
                                   class="btn btn-info btn-xs" data-toggle="tooltip" title="Edit">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a onclick="return confirm('Are you sure you want to Delete?')"
                                   href="{{path('admin_issuetitle_deleteissuetitle')}}/{{issue_title.data[0].main_issue_title_master_id}}"
                                   class="btn btn-danger btn-xs" data-toggle="tooltip" title="Delete">
                                    <i class="fa fa-close"></i>
                                </a>
                             
                                {% endif %}
                            </td>
                          </tr>
                        {% endfor %}                              
                            {% endif %}
                    </tbody>
                    <tfoot>
                      <tr>
                        <th>No.</th>
                        {% if languages is defined and languages is not empty %}
                          {% for lang in languages %}
                        	<th>{{lang.language_name}}</th>
                          {% endfor %}
                        {% endif %}
						<th>Issue Type Title /  Contact Type Title For</th>
                        <th>Action</th>
                      </tr>
                    </tfoot>
                  </table>
                </div>

<font color="red">**  <b>USER</b> for contact us title and <b>AID MAN</b> for report issue title</font>
           
          </div><!-- /.box -->

			  
	</section>
<!----------- Main content : END ---------------------------------------------------------->
{% endblock %}
{% block js %}

  


<script type="text/javascript">
	$(function () {
	  $('#example1').DataTable( {
        dom: 'Bfrtip',
    
        buttons: [
            {
                extend: 'copyHtml5',        
                exportOptions: {
                 columns: ':not(:last-child)',
                },
                
            },
          {
                extend: 'pdfHtml5',
                orientation:'landscape',  
                customize: function (doc) {
            doc.content[1].table.widths = 
              Array(doc.content[1].table.body[0].length + 1).join('*').split('');
          },      
                exportOptions: {
                columns: ':not(:last-child)',
             },
            },
            {
               extend: 'excelHtml5',
                      exportOptions: {
                       columns: ':not(:last-child)',
                      },
            },
            {
               extend: 'csvHtml5',
                      exportOptions: {
                       columns: ':not(:last-child)',
                      },
            },
            {
                      extend: 'print',        
                      exportOptions: {
                       columns: ':not(:last-child)',
                      },
                      
                  },
              ],
            columnDefs: [
            { targets:[4], orderable: false }
            ],
    } );
	});
</script>



{% endblock %}