{% extends "AdminBundle::Layout/adminlayout.html.twig" %}
{% block title %}Right{% endblock %}
{% block css %}
	
{% endblock %}
{% block content %}
	<section class="content-header">
		<h1>
		  Right List
		  <small></small>
		</h1>
		<ol class="breadcrumb">
		  <li><a href="{{path('admin_dashboard_index',{'domain':app.session.get('domain')})}}"><i class="fa fa-dashboard"></i>Dashboard</a></li>
		  <li class="active">Right</li>
		</ol>
	  </section>
	  <section class="content">
		<div class="row">
			<div class="col-xs-12">
				{% for flashMessage in app.session.flashbag.get('success_msg') %}
						<div role="alert" class="alert alert-success alert-dismissible fade in">
						  <button aria-label="Close" data-dismiss="alert" class="close" type="button"><span aria-hidden="true">×</span></button>
						  <strong>Alert!</strong>&nbsp; {{ flashMessage }}
					</div>
				{% endfor %}
				{% for flashMessage in app.session.flashbag.get('error_msg') %}
						<div role="alert" class="alert alert-danger alert-dismissible fade in">
						  <button aria-label="Close" data-dismiss="alert" class="close" type="button"><span aria-hidden="true">×</span></button>
						  <strong>Alert!</strong>&nbsp; {{ flashMessage }}
						</div>
				{% endfor %}
				<div class="box box-primary">
					<div class="box-header with-border" >
						<!--<h3 class="box-title">Organization List</h3>-->
						<a href="{{path('admin_right_addright',{'domain':app.session.get('domain')})}}" role="button" class="btn btn-primary pull-right btn-flat"><i class="fa fa-plus"></i>&nbsp;&nbsp;ADD</a>
					</div>
					<div class="box-body">
						<div class="container-fluid table-responsive">
							<table id="example1" class="table table-bordered table-striped text-center">
								<thead>
									<th>No.</th>
									<th>Display Name</th>
									<th>Description</th>
									<th>Code</th>
									<th>Action</th>
								</thead>
								<tbody>
									{% if right_master is defined and right_master is not empty%}
										{% for right_master in right_master %}
											<tr>
												<td>{{loop.index}}</td>
												<td>{{right_master.display_name}}</td>
												<td>{{right_master.description}}</td>
												<td>{{right_master.code}}</td>
												<td>
													 <a href="{{path('admin_right_addright',{'domain':app.session.get('domain'),right_master_id:right_master.right_master_id})}}" onclick="return confirm('Are you sure you want to Edit?');" class="btn btn-default btn-xs btn-flat" data-toggle="tooltip" data-original-title="Edit"><span class="fa fa-edit"></span></a>
													 <a href="{{path('admin_right_deleteright',{'domain':app.session.get('domain'),right_master_id:right_master.right_master_id})}}" onclick="return confirm('Are you sure you want to Delete?');" class="btn btn-danger btn-xs btn-flat" data-toggle="tooltip" data-original-title="Delete"><span class="fa fa-remove"></span></a>
												</td>
											</tr>
										{% endfor %}
									{%endif %}
								</tbody>
								<tfoot>
									<tr>
										<th>No.</th>
										<th>Display Name</th>
										<th>Description</th>
										<th>Code</th>
										<th>Action</th>
									</tr>
								</tfoot>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	  </section>
{% endblock %}

{% block js %}
<script>
$(document).ready(function() {
    $('#example1').DataTable( {
        dom: 'Bfrtip',
        buttons: [
            'copy', 'csv', 'excel', 'pdf', 'print'
        ]
    } );
} );
</script>
{% endblock %}
