<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>AID | Log in</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.4 -->
	<link href="{{asset('bundles/design/')}}css/bootstrap.min.css" rel="stylesheet" type="text/css" />
	<!-- Fontawesome --->
	<link href="{{asset('bundles/design/')}}css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="{{asset('bundles/design/')}}css/AdminLTE.min.css" rel="stylesheet" type="text/css" />
  </head>
<style type="text/css">
.watermark{
  background:url({{asset('bundles/design/')}}images/login_background.png);
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
  width: 100%;
  height: 100%;
}
</style>

  <body class="login-page watermark">
	<!-- <img class ="img-responsive img col-xs-12" src="{{asset('bundles/design/')}}images/logo.png"/>-->
    <div class="login-box">
	  
	 <!-- <div class="login-logo text-center col-xs-12">
        <img class="img img-responsive " src="{{asset('bundles/design/')}}images/logo.png" />
      </div>-->
      <div class="login-logo">
        <a href="#"><img src="{{asset('bundles/design/')}}images/logo.png" style="width:30%;"></a>
      </div><!-- /.login-logo -->
      <div class="login-box-body" >
        <p class="login-box-msg"><b >Sign in to start your session</b></p>
		
		<!-- START block : Flash message ---------------->
		<div class="row">
		<div class="col-md-12">
		{% for flashMessage in app.session.flashbag.get('success_msg') %}
				<div role="alert" class="alert alert-success alert-dismissible fade in">
				  <button aria-label="Close" data-dismiss="alert" class="close" type="button"><span aria-hidden="true">×</span></button>
				  <strong>Alert!</strong>&nbsp; {{ flashMessage }}
			</div>
		{% endfor %}
		{% for flashMessage in app.session.flashbag.get('error_msg') %}
				<div role="alert" class="alert alert-danger alert-dismissible fade in">
				  <button aria-label="Close" data-dismiss="alert" class="close" type="button"><span aria-hidden="true">×</span></button>
				  <strong>Alert!</strong>&nbsp; {{ flashMessage }}
				</div>
		{% endfor %}
		</div>
		</div>
		<!-- END block : Flash message ---------------->
{#---------------------- Login Form - START -----------------------#}
        <form action="{{path('admin_default_logincheck')}}" method="post">
		
		 
			  <input type="hidden"   name="domain"  value="aid" />
           
          <div class="form-group has-feedback">
			  <input type="text" class="form-control" name="username" placeholder="Username" />
            <span class="glyphicon glyphicon-user form-control-feedback"></span>
          </div>
          <div class="form-group has-feedback">
			  <input type="password" class="form-control" name="password" placeholder="Password" />
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
          </div>
		  <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
          <div class="row">
            <div class="col-xs-4">
              <button type="submit" class="btn btn-success btn-block btn-flat">Sign In</button>
            </div>
          </div>
        </form>
{#---------------------- Login Form - END -----------------------#}
      </div>
    </div>
	
  </body>
</html>

