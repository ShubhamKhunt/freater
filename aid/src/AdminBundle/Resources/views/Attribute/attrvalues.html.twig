{% extends "AdminBundle::Layout/adminlayout.html.twig" %}
{% block title %}{% endblock %}
{% block css %}
	 <link href="{{asset('bundles/design/')}}css/select2.min.css" rel="stylesheet" type="text/css" />
	 <link href="{{asset('bundles/design/')}}css/dataTables.bootstrap.css" rel="stylesheet" type="text/css" />
	 <link href="{{asset('bundles/design/')}}css/bootstrap-toggle.min.css" rel="stylesheet" type="text/css" />
{% endblock %}
{% block content %}
	<section class="content-header">
		<h1>
		  Attribute Values {% if attr_name is defined and attr_name is not empty %}- ({{attr_name.public_name}}){% endif %}
		</h1>
		<ol class="breadcrumb">
		  <li><a href="{{path('admin_dashboard_index',{"domain":app.session.get('domain')})}}"><i class="fa fa-dashboard"></i> Dashboard</a></li>
		  <li><a href="{{path('admin_attribute_attributes',{"domain":app.session.get('domain')})}}">Attribute</a></li>
		  <li class="active">Attribute Values List</li>
		</ol>
	</section>
	<section class="content">
		{% for flashMessage in app.session.flashbag.get('success_msg') %}
		<div class="alert alert-success alert-dismissable">
			<button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
			<h4><i class="icon fa fa-check"></i> Alert!</h4>{{ flashMessage }}
		</div>
        {% endfor %}
        {% for flashMessage in app.session.flashbag.get('error_msg') %}
		<div class="alert alert-danger alert-dismissable">
			<button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
			<h4><i class="icon fa fa-check"></i> Alert!</h4>{{ flashMessage }}
		</div>
		{% endfor %}
		<div class="row">
			<div class="col-xs-12">
                <div class="box box-solid">
                    <div class="box-header with-border">
				<div class="pull-right">
				  <a data-toggle="tooltip" data-original-title="Add Value" href="{{path('admin_attribute_addval',{"domain":app.session.get('domain')})}}/{{attr}}" class="btn btn-primary btn-flat"><i class="fa fa-plus"></i>&nbsp;&nbsp;ADD</a>
				</div>
                </div>
                
				<div class="box-body">
                  <table id="example1" class="table table-bordered table-striped text-center">
                    <thead>
                      <tr>
						<th>No</th>
						<th>Attribute Value</th>
						<th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>
						{% if vals is defined and vals is not empty %}
							{% for val in vals %}
								<tr>
								  <td>{{loop.index}}</td>
								  <td>{{val.value}}</td>
								  <td>
									<a href="{{path('admin_attribute_addval',{"domain":app.session.get('domain')})}}/{{val.attribute_master_id}}/{{val.main_attribute_value_id}}" class="btn btn-xs btn-primary">
									  <span class="fa fa-edit"></span>
									</a>
									<a href="{{path('admin_attribute_delattrvalues',{"domain":app.session.get('domain')})}}/{{val.attribute_master_id}}/{{val.main_attribute_value_id}}" class="btn btn-xs btn-danger"
									  onclick="return confirm('Are you sure you want to Remove?')">
									  <span class="fa fa-remove"></span>
									</a>
								  </td>
								</tr>
							{% endfor %}
						{% endif %}
                    </tbody>
                    <tfoot>
                      <tr>
						<th>No</th>
						<th>Attribute Value</th>
						<th>Actions</th>
                      </tr>
                    </tfoot>
                  </table>
                </div>
          </div>
	</section>
{% endblock %}
{% block js %}

<script src="{{asset('bundles/design/')}}js/bootstrap-toggle.min.js" type="text/javascript"></script>	
<script src="{{asset('bundles/design/')}}js/jquery.dataTables.min.js" type="text/javascript"></script>
<script src="{{asset('bundles/design/')}}js/dataTables.bootstrap.min.js" type="text/javascript"></script>
  


<script type="text/javascript">
	$(function () {
	  $("#example1").DataTable();
	});
</script>

{% endblock %}