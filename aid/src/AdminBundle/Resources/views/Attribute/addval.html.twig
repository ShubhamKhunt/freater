{% extends "AdminBundle::Layout/adminlayout.html.twig" %}
{% block title %}{% endblock %}
{% block css %}
	 <link href="{{asset('bundles/design/')}}css/select2.min.css" rel="stylesheet" type="text/css" />
	 <link href="{{asset('bundles/design/')}}css/dataTables.bootstrap.css" rel="stylesheet" type="text/css" />
	 <link href="{{asset('bundles/design/')}}css/bootstrap-toggle.min.css" rel="stylesheet" type="text/css" />
{% endblock %}
{% block content %}
	<section class="content-header">
		<h1>
		  Attribute Values {% if attr_name is defined and attr_name is not empty %}- ({{attr_name.public_name}}){% endif %}
		</h1>
		<ol class="breadcrumb">
		  <li><a href="{{path('admin_dashboard_index',{"domain":app.session.get('domain')})}}"><i class="fa fa-dashboard"></i> Dashboard</a></li>
		  <li><a href="{{path('admin_attribute_attributes',{"domain":app.session.get('domain')})}}">Attribute</a></li>
		  <li><a href="{{path('admin_attribute_attrvalues',{"domain":app.session.get('domain'),"attr":attr})}}">Attribute Values List</a></li>
		  <li class="active">Add - Update Attribute Values</li>
		</ol>
	</section>
	<section class="content">
		{% for flashMessage in app.session.flashbag.get('success_msg') %}
		<div class="alert alert-success alert-dismissable">
			<button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
			<h4><i class="icon fa fa-check"></i> Alert!</h4>{{ flashMessage }}
		</div>
        {% endfor %}
        {% for flashMessage in app.session.flashbag.get('error_msg') %}
		<div class="alert alert-danger alert-dismissable">
			<button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
			<h4><i class="icon fa fa-check"></i> Alert!</h4>{{ flashMessage }}
		</div>
		{% endfor %}
		<div class="row">
			<div class="col-xs-12">
				<div class="box box-solid">
					
						{% if language is defined and language is not empty %}
                    <div class="nav-tabs-custom">
                        <ul class="nav nav-tabs">
                        
                            {% for lang in language %}
                            <li {% if loop.index == 1 %}class="active"{% endif %}><a data-toggle="tab" href="#tab_{{lang.language_master_id}}">{{lang.language_name}}</a></li>
                            {% endfor %}
                         
                        </ul>
                        <div class="tab-content">
                            {% for lang in language %}
                            <div id="tab_{{lang.language_master_id}}" class="tab-pane{% if loop.index == 1 %} active{% endif %}">
					
					<div class="box-body">
						<form class="form-horizontal" method="post" enctype="multipart/form-data" action="{{path('admin_attribute_saveattrval',{"domain":app.session.get('domain')})}}">
							<div class="form-group">
								{% if val is defined and val is not empty %}
									<input type="hidden" name="attrval" value="{{val[0].main_attribute_value_id}}" />
								{% endif %}
								{% if attr is defined and attr is not empty %}
									<input type="hidden" name="attribute" value="{{attr}}"/>
								{% endif %}
								<input type="hidden" name="language_id" value="{{lang.language_master_id}}"/>
							</div>
							<div class="form-group">
								<label class="control-label col-sm-2">Attribute Value</label>
								<div class="col-sm-9">
									<input type="text" name="attrvalue" class="form-control" required="" placeholder="Attribute Value"
										{% if val is defined and val is not empty %}
											{% for v in val %}
												{% if v.language_id == lang.language_master_id %}
											value="{{v.value}}"
												{% endif %}
											{% endfor %}
										{% endif %}
									/>
								</div>
							</div>
							<hr />
							<div class="form-group">
								<div class="col-sm-9 col-sm-offset-2 col-xs-12">
									<div class="row">
										<div class="col-xs-6">
											<button class="form-btn btn btn-primary" name="save" type="submit">Save</button>
										</div>
										<div class="col-xs-6">
											<a href="{{path('admin_attribute_attrvalues',{"domain":app.session.get('domain'),"attr":attr})}}" class="form-btn btn btn-default">
												Cancel
											</a>
										</div>
									</div>
								</div>
							</div>
						</form>
					</div>
					</div>
                            {% endfor %}
                        </div>
                      </div>
                    {% endif %}
				</div>
			</div>
		</div>
	</section>
{% endblock %}
{% block js %}

<script src="{{asset('bundles/design/')}}js/bootstrap-toggle.min.js" type="text/javascript"></script>	
<script src="{{asset('bundles/design/')}}js/jquery.dataTables.min.js" type="text/javascript"></script>
<script src="{{asset('bundles/design/')}}js/dataTables.bootstrap.min.js" type="text/javascript"></script>
  


<script type="text/javascript">
	$(function () {
	  $("#example1").DataTable();
	});
</script>



{% endblock %}